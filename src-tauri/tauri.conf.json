{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "myecolav",
  "version": "0.1.0",
  "identifier": "com.myecolav.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "myecolav",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "appimage",
      "rpm",
      "msi",
      "nsis",
      "dmg"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0 | libwebkit2gtk-4.0-37 | libwebkit2gtk-4.0-37-gtk2",
          "libgtk-3-0",
          "libglib2.0-0",
          "libayatana-appindicator3-1 | libappindicator3-1",
          "librsvg2-2"
        ]
      },
      "rpm": {
        "depends": [
          "webkit2gtk4.1 | webkit2gtk4.0",
          "gtk3",
          "glib2",
          "libappindicator-gtk3",
          "librsvg2"
        ]
      }
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
